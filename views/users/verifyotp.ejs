<% layout('layouts/boilerplate') %>

<body>
  <div class="row mt-5">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow">
        <div class="card-body">
          <h3 class="card-title text-center mb-4">Verify OTP</h3>
          <p class="text-muted text-center mb-4">
            We've sent a 6-digit code to<br>
            <strong><%= email %></strong>
          </p>
          
          <form action="/verify-otp" method="POST" class="needs-validation" novalidate>
            <input type="hidden" name="email" value="<%= email %>" />
            
            <div class="mb-3">
              <label class="form-label" for="otp">Enter OTP</label>
              <input
                class="form-control text-center"
                type="text"
                id="otp"
                name="otp"
                placeholder="000000"
                maxlength="6"
                pattern="[0-9]{6}"
                style="font-size: 24px; letter-spacing: 10px;"
                required
              />
              <div class="invalid-feedback">
                Please enter a valid 6-digit OTP.
              </div>
            </div>
            
            <div class="d-grid gap-2">
              <button class="btn btn-success" type="submit">Verify OTP</button>
              <a href="/forget-password" class="btn btn-outline-secondary">Resend OTP</a>
            </div>
            
            <p class="text-muted text-center mt-3 mb-0">
              <small>OTP expires in 5 minutes</small>
            </p>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>