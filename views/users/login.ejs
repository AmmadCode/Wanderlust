<% layout('layouts/boilerplate') %>

<div class="row">
  <div class="col-6 offset-3">
    <div class="auth-card">
      <h3 class="text-center mb-4">Login to WanderLust</h3>
      <form action="/login" method="POST" class="needs-validation" novalidate>
        <div class="form-group">
          <input
            type="text"
            class="form-control"
            id="username"
            name="username"
            placeholder=" "
            required
          />
          <label for="username" class="form-label">Username</label>
          <div class="valid-feedback">Username looks good!</div>
          <div class="invalid-feedback">
            Username must contain at least some letters (e.g., "John345",
            "testuser")
          </div>
        </div>
        <div class="form-group password-toggle">
          <input
            type="password"
            class="form-control no-validation"
            id="password"
            name="password"
            placeholder=" "
            required
          />
          <label for="password" class="form-label">Password</label>
          <button
            type="button"
            class="password-toggle-btn"
            onclick="togglePassword('password')"
          >
            <i class="fas fa-eye" id="password-eye"></i>
          </button>
        </div>
        <div class="form-options">
          <a
            href="/forget-password"
            class="forgot-link"
            >Forgot Password?</a
          >
        </div>
        <button class="btn add-btn w-100">Login</button>
      </form>
      <div class="auth-footer">
        <p class="text-center mt-3">
          Don't have an account?
          <a href="/signup" class="auth-link">Sign up here</a>
        </p>
      </div>
    </div>
  </div>
</div>
