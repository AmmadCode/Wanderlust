<style>
  /* Search Container - Seamless Design */
  .search-container {
    position: relative;
    display: flex;
    align-items: center;
    max-width: 420px;
    margin: 0 1rem;
    background: white;
    border-radius: 50px;
    border: 2px solid #e9ecef;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .search-container:focus-within {
    border-color: #fe424d;
    box-shadow: 0 0 0 3px rgba(254, 66, 77, 0.1);
    transform: translateY(-1px);
  }

  /* Search Input - Seamless Integration */
  .search-input {
    width: 100%;
    padding: 0.75rem 0 0.75rem 3rem;
    border: none;
    background: transparent;
    font-size: 0.95rem;
    font-weight: 500;
    color: #2d3436;
    transition: all 0.3s ease;
  }

  .search-input:focus {
    outline: none;
  }

  .search-input::placeholder {
    color: #6c757d;
    font-weight: 400;
  }

  /* Search Icon */
  .search-icon {
    position: absolute;
    left: 1.2rem;
    color: #6c757d;
    font-size: 1rem;
    pointer-events: none;
    transition: all 0.3s ease;
    z-index: 1;
  }

  .search-container:focus-within .search-icon {
    color: #fe424d;
  }

  /* Search Button - Integrated Design */
  .btn-search {
    background: #fe424d;
    color: white;
    border: none;
    padding: 0.75rem 1.75rem;
    font-size: 0.9rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    align-items: center;
    gap: 0.4rem;
    white-space: nowrap;
    margin: 0;
    height: 100%;
  }

  .btn-search:hover {
    background: #fd2935;
  }

  .btn-search:active {
    background: #e22e3a;
  }

  .btn-search i {
    font-size: 0.9rem;
  }

  /* Search Form */
  .search-form {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  /* Responsive Design */
  @media (max-width: 991px) {
    .search-container {
      max-width: 100%;
      margin: 1rem 0;
    }

    .search-form {
      width: 100%;
      order: -1;
    }
  }

  @media (max-width: 768px) {
    .search-container {
      max-width: 100%;
      margin: 0.75rem 0;
    }

    .search-input {
      padding: 0.65rem 0 0.65rem 2.5rem;
      font-size: 0.9rem;
    }

    .search-icon {
      left: 1rem;
      font-size: 0.9rem;
    }

    .btn-search {
      padding: 0.65rem 1.2rem;
      font-size: 0.85rem;
    }

    .btn-search span {
      display: none;
    }

    .btn-search i {
      margin: 0;
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .search-container {
      margin: 0.5rem 0;
      border-radius: 40px;
    }

    .search-input {
      padding: 0.6rem 0 0.6rem 2.2rem;
      font-size: 0.85rem;
    }

    .search-icon {
      left: 0.8rem;
      font-size: 0.85rem;
    }

    .btn-search {
      padding: 0.6rem 1rem;
      font-size: 0.8rem;
    }
  }

  /* Dark Mode Support */
  .dark .search-container {
    background: #2d2d2d;
    border-color: #404040;
  }

  .dark .search-container:focus-within {
    border-color: #fe424d;
    box-shadow: 0 0 0 3px rgba(254, 66, 77, 0.15);
  }

  .dark .search-input {
    color: #ffffff;
  }

  .dark .search-input::placeholder {
    color: #b3b3b3;
  }

  .dark .search-icon {
    color: #b3b3b3;
  }

  .dark .search-container:focus-within .search-icon {
    color: #fe424d;
  }

  .dark .btn-search {
    background: #fe424d;
  }

  .dark .btn-search:hover {
    background: #fd2935;
  }

  /* Smooth hover effect on container */
  .search-container:hover {
    border-color: #ddd;
  }

  .search-container:hover .search-icon {
    color: #495057;
  }

  /* Animation for search expansion on focus */
  @media (min-width: 992px) {
    .search-container {
      transition: all 0.3s ease;
    }

    .search-container:focus-within {
      max-width: 480px;
    }
  }
</style>



